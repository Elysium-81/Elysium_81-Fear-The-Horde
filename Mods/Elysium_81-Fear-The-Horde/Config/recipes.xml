<configs>
	<!-- Makes the recipes learnable -->
	
 	<setattribute xpath="/recipes/recipe[@name='resourceForgedIron']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolClawHammer']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolPickaxeIron']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolShovelIron']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolFireaxeIron']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolFireaxeSteel']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolPickaxeSteel']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolShovelSteel']" name="tags">learnable</setattribute>
	<setattribute xpath="/recipes/recipe[@name='meleeToolWrench']" name="tags">learnable</setattribute>
	
	
	<!-- Change existing recipes -->
	
	<remove xpath="/recipes/recipe[@name='forge']"/>
	
	
	<!-- Add costume recipes -->
	<append xpath="/recipes">
		<recipe name="crudeforge" count="1" tags="learnable">
			<ingredient name="resourceRockSmall" count="50"/>
			<ingredient name="resourceClayLump" count="60"/>
			<ingredient name="toolBellows" count="1"/>
			<ingredient name="resourceMetalPipe" count="1"/>
		</recipe>

		<recipe name="largeforge" count="1" tags="learnable" craft_area="workbench">
			<ingredient name="flagstoneBlock" count="4"/>
			<ingredient name="toolBellows" count="1"/>
			<ingredient name="resourceMetalPipe" count="10"/>
		</recipe>

		<recipe name="bigforge" count="1" tags="learnable" craft_area="workbench">
			<ingredient name="flagstoneBlock" count="9"/>
			<ingredient name="toolBellows" count="1"/>
			<ingredient name="resourceMetalPipe" count="25"/>
		</recipe>		

		<recipe name="meleeToolweedCleaver" count="1">
			<ingredient name="resourceForgedIron" count="10"/>
			<ingredient name="resourceWood" count="5"/>
		</recipe>

		<recipe name="dartTurret" count="1" craft_area="workbench" tags="learnable"> <!-- trap -->
			<ingredient name="motionsensor" count="1"/>
			<ingredient name="dartTrap" count="1"/>
			<ingredient name="resourceMechanicalParts" count="9"/>
			<ingredient name="resourceDuctTape" count="2"/>
			<ingredient name="resourceForgedIron" count="5"/>
		</recipe>

		<recipe name="gatlingTurret" count="1" craft_area="workbench" tags="learnable"> <!-- trap -->
			<ingredient name="motionsensor" count="1"/>
			<ingredient name="resourceForgedSteel" count="30"/>
			<ingredient name="resourceMechanicalParts" count="9"/>
			<ingredient name="resourceDuctTape" count="2"/>
			<ingredient name="resourceForgedIron" count="5"/>
		</recipe>		
	
		<recipe name="meleeToolStoneHammer" count="1"> <!-- Toolsd -->
			<ingredient name="resourceRockSmall" count="4"/>
			<ingredient name="resourceYuccaFibers" count="2"/>
			<ingredient name="resourceWood" count="2"/>
		</recipe>
	
	</append>
	
	
</configs>


